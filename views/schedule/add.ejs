<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Schedule</title>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <!-- JavaScript Bundle with Popper -->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../component/header') %>
  <div class="container-me">
    <h1 class="title-me mt-3 mb-3"> Add Schedule</h1>
    <form action="/schedule/store" method="POST" class="container">
      <div class="mb-3">
        <label for="" class="form-label" >Nama Kegiatan</label>
        <input value="<%= nameKegiatan %>" name="nameKegiatan" type="text" class="form-control" id="" placeholder="Kegiatan Anda">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Deskripsi</label>
        <textarea name="desc" id="" class="form-control" placeholder="deskripsi anda" >
         <%= desc %>
        </textarea>
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Status</label>
        <select name="statusId" class="form-control">
          <% statusUser.forEach(status=> { %>
              <option value="<%=status.idStatus%>">
                  <%= status.name %>
              </option>
              <% }) %>
      </select>
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Gambar</label>
        <input value="<%= gambar %>"  name="gambar" type="text" class="form-control" id="" placeholder="masukkan gambar" >
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Tanggal Kegiatan</label>
        <input name="tgl" type="date" class="form-control" id="" value="<%= tgl %>">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Nama anda</label>
        <select name="userId" class="form-control">
          <% user.forEach(users=> { %>
            <option value="<%=users.idUser%>">
                <%= users.name %>
            </option>
            <% }) %>
        </select>
      </div>
      <% 
      if(messages.error){
        %>
          <h1 class="error">
            <%= messages.error %>
          </h1>
        <%
      }
      %>
      <button type="submit" class="btn btn-primary btn-submit-me">Submit</button>
    </form>
  </div>
  

</body>
</html>